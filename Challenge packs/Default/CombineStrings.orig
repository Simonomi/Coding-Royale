public class CombineStrings {
	public static String combineStrings(String a String b) {
		int least = 0;
		most = 0;
		if(a.length() < b.length) {
			int least = a.length();
			most = b.length();
		} else {
			least = b.length();
			most = a.length();	
		}
		
		String out = ""
		for(int i = 0; i < least; i++) {
			out += a.substring(i, i + 1);
			out += b.substring(i, i + 1);
		}
		
		if(a.length() < b.length()) {
			out += b.substring(least, most);
		} else {
			if(least != most) {
				out += a.substring(least, most);
			}
		}
		
		return out;
	}
	public static void main(String[] args) {
		string a = "Test";
		String b = "Strings";
		String out = combineStrings(a, b);
		System.out.println("The solution is " + out);
	}
}